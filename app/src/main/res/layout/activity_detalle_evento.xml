<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deyvi.juanfutbol.DetalleEvento">

    <!--Aqui van los de detalles de como se va a ver cada evento-->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:textSize="20sp"
        android:text="@string/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imgEvento"
        android:src="@drawable/juanlogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitulo"/>
    <TextView
        android:id="@+id/tvDescription"
        android:text="Detalles del evento"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imgEvento"/>

  <LinearLayout
    android:id="@+id/tvLinear"
    android:layout_below="@id/tvDescription"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:padding="5dp"
        android:id="@+id/tvCategoria"
        android:text="categoria"
        android:textSize="12dp"
        android:layout_below="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvType"
        android:padding="5dp"
        android:layout_below="@id/tvDescription"
        android:layout_alignLeft="@id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="tipo" />
</LinearLayout>


<LinearLayout
    android:id="@+id/tvLinear2"
    android:layout_below="@id/tvLinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvLugar"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Lugar"/>
    <TextView
        android:id="@+id/tvDate"
        android:padding="5dp"
        android:text="dateUnix"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
<LinearLayout
    android:layout_below="@+id/tvLinear2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:padding="4dp"
        android:id="@+id/imgYoutube"
        android:src="@drawable/youtubee"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <ImageView
        android:id="@+id/imgMaps"
        android:padding="4dp"
        android:src="@drawable/mapas"
        android:layout_width="50dp"
        android:layout_height="50dp" />
</LinearLayout>
</RelativeLayout>
